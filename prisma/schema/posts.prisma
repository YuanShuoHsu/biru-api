model Post {
  id        Int      @id @default(autoincrement())
  authorId  String   @map("author_id")
  content   String?
  createdAt DateTime @default(now())
  published Boolean  @default(false)
  title     String
  updatedAt DateTime @updatedAt

  author User @relation(fields: [authorId], references: [id])

  @@index([authorId])
  @@map("posts")
}
