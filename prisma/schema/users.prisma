enum Role {
  ADMIN
  MANAGER
  STAFF
  USER
}

model User {
  id            String    @id @default(uuid())
  accounts      Account[]
  countryCode   String    @default("+886")
  createdAt     DateTime  @default(now())
  email         String    @unique
  emailVerified Boolean   @default(false)
  firstName     String    @default("")
  image         String    @default("/images/IMG_4590.jpg")
  lastName      String    @default("")
  phone         String?
  phoneVerified Boolean   @default(false)
  posts         Post[]
  role          Role      @default(USER)
  sessions      Session[]
  updatedAt     DateTime  @updatedAt

  @@unique([countryCode, phone])
}

enum Provider {
  LOCAL
  GOOGLE
}

model Account {
  id                    String    @id @default(uuid())
  accessToken           String?
  accessTokenExpiresAt  DateTime?
  accountId             String
  createdAt             DateTime  @default(now())
  idToken               String?
  password              String?
  providerId            Provider  @default(LOCAL)
  refreshToken          String?
  refreshTokenExpiresAt DateTime?
  scope                 String?
  updatedAt             DateTime  @updatedAt

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([providerId, accountId])
  @@unique([userId, providerId])
  @@index([userId])
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  ipAddress String?
  token     String   @unique
  updatedAt DateTime @updatedAt
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, userAgent])
  @@index([userId])
}

model Verification {
  id         String   @id @default(uuid())
  code       String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  identifier String
  updatedAt  DateTime @updatedAt
}
