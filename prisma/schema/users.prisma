enum Gender {
  FEMALE
  MALE
  OTHER
}

enum Role {
  ADMIN
  MANAGER
  STAFF
  USER
}

model User {
  id                     String    @id @default(uuid())
  accounts               Account[]
  birthDate              DateTime?
  countryCode            String    @default("TW")
  countryLabel           String    @default("Taiwan")
  countryPhone           String    @default("+886")
  createdAt              DateTime  @default(now())
  email                  String    @unique
  emailVerified          Boolean   @default(false)
  emailVerifiedAt        DateTime?
  emailVerificationToken String?   @unique
  firstName              String    @default("")
  gender                 Gender    @default(OTHER)
  image                  String?
  isSubscribed           Boolean   @default(true)
  lastName               String    @default("")
  phoneNumber            String?
  phoneVerified          Boolean   @default(false)
  posts                  Post[]
  role                   Role      @default(USER)
  sessions               Session[]
  updatedAt              DateTime  @updatedAt

  @@unique([countryCode, phoneNumber])
}

model Session {
  id        String   @id @default(uuid())
  createdAt DateTime @default(now())
  expiresAt DateTime
  ipAddress String?
  token     String   @unique
  updatedAt DateTime @updatedAt
  userAgent String?

  userId String
  user   User   @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, userAgent])
  @@index([userId])
}

model Verification {
  id         String   @id @default(uuid())
  code       String
  createdAt  DateTime @default(now())
  expiresAt  DateTime
  identifier String
  updatedAt  DateTime @updatedAt
}
