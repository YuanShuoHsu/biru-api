enum Provider {
  local
  google
}

enum Role {
  admin
  manager
  staff
  user
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  email     String   @unique
  firstName String?
  lastName  String?
  password  String
  picture   String?
  posts     Post[]
  provider  Provider @default(local)
  role      Role     @default(user)
  updatedAt DateTime @updatedAt
}
